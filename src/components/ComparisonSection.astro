---
import { t } from "i18n:astro";
// ComparisonSlider.astro
import Swiper from "swiper";
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";
import { Navigation, Pagination } from "swiper/modules";

---

<section class="comparison-section">
  <div class="container">
    <header class="section-header">
      <h2 class="section-title" set:html={t("home:comparison.title")}></h2>
      <p class="section-subtitle" set:html={t("home:comparison.subtitle", { currentYear: new Date().getFullYear() })}></p>
    </header>

    <div class="comparison-grid">
      {
        t("home:comparison.examples", { returnObjects: true }).map((example: any, index: number) => (
          <article class="comparison-card" key={index}>
            <div class="card-slider">

              <div class={`swiper swiper-${index}`}>
                <div class="swiper-wrapper">
                  <div class="swiper-slide">
                    <div class="img-placeholder">Image {index + 1}-1</div>
                  </div>
                  <div class="swiper-slide">
                    <div class="img-placeholder">Image {index + 1}-2</div>
                  </div>
                </div>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
              </div>
            </div>

            <div class="card-content">
              <h3 class="card-title">{example.title}</h3>
              <p class="card-description">{example.description}</p>
            </div>
          </article>
        ))
      }
    </div>
  </div>

  <div class="bg-blur bg-blur-1"></div>
  <div class="bg-blur bg-blur-2"></div>
</section>

<script>
  import Swiper from "swiper";
  import "swiper/css";
  import "swiper/css/navigation";
  import "swiper/css/pagination";
  import { Navigation, Pagination } from "swiper/modules";

  console.log("js load ???");


    
    document.querySelectorAll(".swiper").forEach((el) => {
      console.log("swiper load ???");
    new Swiper(el, {
      modules: [Navigation, Pagination],
      direction: "horizontal",
      loop: true,
      pagination: {
        el: el.querySelector(".swiper-pagination"),
        clickable: true,
      },
      navigation: {
        nextEl: el.querySelector(".swiper-button-next"),
        prevEl: el.querySelector(".swiper-button-prev"),
      },
    });
  });




</script>

<style lang="less" scoped>
/* ===============================
   VARIABLES
   =============================== */
@card-radius: 16px;
@card-padding: 2rem;
@card-bg: var(--white);
@card-border: rgba(0, 0, 0, 0.05);
@slider-height-mobile: 220px;
@slider-height-desktop: 300px;

@blur-purple-1: rgba(139, 92, 246, 0.15);
@blur-purple-2: rgba(167, 139, 250, 0.1);

/* ===============================
   BASE STYLES
   =============================== */
@media only screen and (min-width: 0rem) {
  .comparison-section {
    position: relative;
    padding: var(--sectionPadding);
    background: var(--light);
    overflow: hidden;
    isolation: isolate;

    .container {
      max-width: 1200px;
      margin: 0 auto;
      position: relative;
      z-index: 1;
    }

    .section-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .section-title {
      font-size: clamp(2rem, 4vw, 3rem);
      color: var(--headerColor);
      font-weight: 800;
      margin-bottom: 1rem;
      line-height: 1.2;
    }

    .section-subtitle {
      font-size: 1.2rem;
      color: var(--bodyTextColor);
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    .comparison-grid {
      display: grid;
      gap: 2rem;
      grid-template-columns: 1fr;
    }

    .comparison-card {
      background: @card-bg;
      border: 1px solid @card-border;
      border-radius: @card-radius;
      padding: @card-padding;
      box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;

      &:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px -15px rgba(0, 0, 0, 0.15);
      }
    }

    .card-slider {
      margin-bottom: 1.5rem;

      .swiper {
        width: 100%;
        height: @slider-height-mobile;
        border-radius: @card-radius;
        overflow: hidden;

        .swiper-slide {
          display: flex;
          justify-content: center;
          align-items: center;
          background: #f3f3f3;
        }

        .img-placeholder {
          width: 100%;
          height: 100%;
          background: #e6e6e6;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 1rem;
          color: #555;
        }

        .swiper-pagination-bullet {
          background: var(--primary);
        }
      }
    }

    .card-title {
      font-size: 1.4rem;
      font-weight: 700;
      color: var(--headerColor);
      margin-bottom: 0.75rem;
    }

    .card-description {
      color: var(--bodyTextColor);
      line-height: 1.6;
    }

    .bg-blur {
      position: absolute;
      border-radius: 50%;
      background: @blur-purple-1;
      filter: blur(80px);
      animation: float 20s ease-in-out infinite;
      z-index: -1;
    }

    .bg-blur-1 {
      width: 300px;
      height: 300px;
      top: -100px;
      right: -100px;
    }

    .bg-blur-2 {
      width: 400px;
      height: 400px;
      bottom: -200px;
      left: -150px;
      background: @blur-purple-2;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px) scale(1); }
      50% { transform: translateY(-20px) scale(1.05); }
    }
  }
}

/* ===============================
   TABLET
   =============================== */
@media only screen and (min-width: 768px) {
  .comparison-section {
    .comparison-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .card-slider .swiper {
      height: @slider-height-desktop;
    }

    .card-title {
      font-size: 1.6rem;
    }
  }
}

/* ===============================
   DESKTOP
   =============================== */
@media only screen and (min-width: 1024px) {
  .comparison-section {
    .comparison-grid {
      gap: 3rem;
    }

    .comparison-card {
      padding: 2.5rem;
    }

    .card-title {
      font-size: 1.8rem;
    }
  }
}

/* ===============================
   DARK MODE
   =============================== */
@media only screen and (min-width: 0rem) {
  body.dark-mode {
    .comparison-section {
      background: var(--dark);

      .section-title,
      .card-title {
        color: var(--bodyTextColorWhite);
      }

      .section-subtitle,
      .card-description {
        color: var(--bodyTextColorWhite);
        opacity: 0.9;
      }

      .comparison-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
      }

      .swiper-pagination-bullet {
        background: var(--bodyTextColorWhite);
      }
    }
  }
}
</style>

---
// benefits.astro (for reference)
import { t } from "i18n:astro";
---

<div class="beautiful-bg">
  <section class="benefits-section">
    <div class="benefits-container">
      <header class="benefits-header">
        <h2 class="benefits-heading" set:html={t("home:benefits.heading")}></h2>
        <div class="benefits-body">
          <p class="benefits-quote" set:html={t("home:benefits.body.quote")}></p>
          <p class="benefits-explanation" set:html={t("home:benefits.body.explanation")}></p>
        </div>
      </header>
      
      <div class="benefits-grid">
        {t("home:benefits.sections", { returnObjects: true }).map((section: any, index: number) => (
          <article class="benefit-card" key={index}>
            <div class="benefit-icon"></div>
            <header class="benefit-card-header">
              <h4 class="benefit-title">{section.title}</h4>
              <h3 class="benefit-subtitle">
                {section.subtitle}
                {section.tooltip && <span class="benefit-tooltip" title={section.tooltip}>ⓘ</span>}
              </h3>
            </header>
            <ul class="benefit-points">
              {section.points.map((point: string, pointIndex: number) => (
                <li class="benefit-point" set:html={point} key={pointIndex}></li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </div>
  </section>

  <div class="bg-blur bg-blur-1"></div>
  <div class="bg-blur bg-blur-2"></div>
  <div class="bg-blur bg-blur-3"></div>
  <div class="bg-blur bg-blur-4"></div>
  <div class="bg-blur bg-blur-5"></div>
  <div class="bg-blur bg-blur-6"></div>
</div>

<style lang="less" scoped>
@blur-blue-1: rgba(59, 130, 246, 0.15);
@blur-blue-2: rgba(96, 165, 250, 0.1);
@blur-blue-3: rgba(147, 197, 253, 0.12);
@blur-blue-4: rgba(37, 99, 235, 0.08);

/*-- -------------------------- -->
<---         Benefits           			-->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
  .beautiful-bg {
    position: relative;
    min-height: 100vh;
    background: var(--secondaryDark, #172554);
    overflow: hidden;
    isolation: isolate;
  }

  .benefits-section {
    position: relative;
    z-index: 1;
    padding: 3rem 1rem;
    min-height: 100vh;
  }

  .benefits-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .benefits-header {
    margin-bottom: 3rem;
  }

  .benefits-heading {
    color: var(--secondaryLight);
    font-size: calc(35px + (10) * (100vw - 400px) / (1024 - 400));
    margin-bottom: 1.5rem;
    font-weight: 700;
    line-height: 1.2;
    text-transform:capitalize;
  }
  :global(.benefits-heading small){
    opacity:0.65;
  }

  .benefits-body {
    max-width: 600px;
    margin: 0 ;
    line-height: 1.6;

    p{
      color: var(--secondaryLight);

    }
  }

  .benefits-quote {
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .benefits-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  .benefit-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem;
    backdrop-filter: blur(10px);

  }

  .benefit-icon {
    width: 60px;
    height: 60px;
    background: #fbbf24;
    border-radius: 12px;
    margin: 0 0 1.5rem;
  }

  .benefit-card-header {
    margin-bottom: 1.5rem;
  }

  .benefit-title {
    color: var(--secondaryLighter, #9ca3af);
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;


  }

  .benefit-subtitle {
    color: var(--secondaryLight, white);
    font-size: 1.2rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .benefit-tooltip {
    margin-left: 0.5rem;
    cursor: help;
  }

  .benefit-points {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
  }

  .benefit-point {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    position: relative;
    
    &:before {
      content: "✓";
      position: absolute;
      left: 0;
      color: #34d399;
      font-weight: bold;
    }
  }

  .bg-blur {
    position: absolute;
    border-radius: 50%;
    background: @blur-blue-1;
    filter: blur(80px);
    animation: float 20s ease-in-out infinite;
    z-index: -1;
  }

  .bg-blur-1 {
    width: 300px;
    height: 300px;
    top: -150px;
    right: -100px;
    animation-delay: 0s;
  }

  .bg-blur-2 {
    width: 400px;
    height: 400px;
    bottom: -200px;
    left: -150px;
    background: @blur-blue-2;
    animation-delay: -10s;
  }

  .bg-blur-3 {
    width: 200px;
    height: 200px;
    top: 40%;
    left: 60%;
    background: @blur-blue-3;
    animation-delay: -5s;
  }

  .bg-blur-4 {
    width: 350px;
    height: 350px;
    top: 120vh;
    right: 10%;
    background: @blur-blue-2;
    animation-delay: -15s;
  }

  .bg-blur-5 {
    width: 250px;
    height: 250px;
    top: 150vh;
    left: -50px;
    background: @blur-blue-4;
    animation-delay: -8s;
  }

  .bg-blur-6 {
    width: 180px;
    height: 180px;
    top: 180vh;
    left: 50%;
    background: @blur-blue-3;
    animation-delay: -12s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) scale(1); }
    50% { transform: translateY(-20px) scale(1.05); }
  }
}

/* Tablet - 768px */
@media only screen and (min-width: 768px) {
  .benefits-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  


  .benefit-subtitle {
    font-size: 1.5rem;
  }

  .bg-blur-1 {
    width: 500px;
    height: 500px;
    top: -200px;
    right: -150px;
  }
  
  .bg-blur-2 {
    width: 600px;
    height: 600px;
    bottom: -300px;
    left: -200px;
  }

  .bg-blur-4 {
    width: 450px;
    height: 450px;
    top: 130vh;
  }

  .bg-blur-5 {
    width: 320px;
    height: 320px;
    top: 160vh;
  }
}

/* Desktop - 1024px */
@media only screen and (min-width: 1024px) {
  .benefits-section {
    padding: 4rem 2rem;
  }


  .benefit-subtitle {
    font-size: 1.7rem;
  }

  .benefit-icon {
    width: 80px;
    height: 80px;
  }
}

/* Dark Mode */
@media only screen and (min-width: 0rem) {
  body.dark-mode {
    .benefit-card {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.15);
    }
  }
}
</style>